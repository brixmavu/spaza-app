<a href="/purchases/addPurchases" class="btn btn-default" role="button">
<span class="glyphicon glyphicon-plus" area-hidden="true"></span>Add Purchase</a>
<div class="table-responsive">
<table class ="table table-striped" >
	<thead>
		<tr>
			<th>Purchase id</th>
			<th>Product name</th>
			<th>Date</th>
			<th>Quantity</th>
			<th>cost Price</th>
			<th>Supplier id</th>
		</tr>
	</thead>
	<tbody>
		{{#purchase}}
		<tr>
			<td>{{purchases_id}}</td>
			<td>{{products_name}}</td>
			<td>{{date}}</td>
			<td>{{qty}}</td>
			<td>{{cost_price}}</td>
			<td>{{suppliers_id}}</td>

			<td><a href="#"><span class="glyphicon glyphicon-pencil" area-hidden="true"></span> Edit</a></td>
			<td><a href="#"><span class="glyphicon glyphicon-trash" area-hidden="true"></span> Delete</a></td>
		</tr>
		{{/purchase}}
	</tbody>

</table>
</div>
